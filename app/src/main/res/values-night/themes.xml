<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ios-inspired dark theme -->
    <style name="Base.Theme.TrackCast" parent="Theme.Material3.Dark.NoActionBar">
        <!-- primary colors -->
        <item name="colorPrimary">@color/ios_dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/ios_dark_primary</item>

        <!-- secondary colors -->
        <item name="colorSecondary">@color/ios_dark_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- surface colors -->
        <item name="colorSurface">@color/ios_dark_surface</item>
        <item name="colorOnSurface">@color/ios_dark_text_primary</item>
        <item name="colorSurfaceVariant">@color/glass_dark</item>

        <!-- background -->
        <item name="android:colorBackground">@color/ios_dark_background</item>
        <item name="colorOnBackground">@color/ios_dark_text_primary</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/ios_dark_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TrackCast.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TrackCast.Headline2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TrackCast.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TrackCast.Body2.Dark</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TrackCast.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TrackCast.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TrackCast.LargeComponent</item>

        <!-- material components -->
        <item name="chipStyle">@style/Widget.TrackCast.Chip.Dark</item>
        <item name="materialCardViewStyle">@style/Widget.TrackCast.CardView.Dark</item>
        <item name="floatingActionButtonStyle">@style/Widget.TrackCast.FloatingActionButton.Dark</item>
    </style>

    <!-- typography styles for dark theme -->
    <style name="TextAppearance.TrackCast.Headline1.Dark" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/ios_dark_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackCast.Headline2.Dark" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/ios_dark_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackCast.Body1.Dark" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/ios_dark_text_secondary</item>
    </style>

    <style name="TextAppearance.TrackCast.Body2.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/ios_dark_text_tertiary</item>
    </style>

    <!-- widget styles for dark theme -->
    <style name="Widget.TrackCast.Chip.Dark" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/glass_dark</item>
        <item name="chipStrokeColor">@color/glass_border_dark</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/ios_dark_text_primary</item>
    </style>

    <style name="Widget.TrackCast.CardView.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/glass_dark</item>
        <item name="strokeColor">@color/glass_border_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TrackCast.MediumComponent</item>
    </style>

    <style name="Widget.TrackCast.FloatingActionButton.Dark" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/ios_dark_primary</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TrackCast.LargeComponent</item>
    </style>
</resources>
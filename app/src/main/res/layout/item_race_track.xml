<?xml version="1.0" encoding="utf-8"?>
<!-- track list item with ios-style glassmorphism design -->
<!-- design inspired by modern ios cards with translucent glass effects -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- track image with rounded corners for vivid track photos -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageTrack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorSurface"
            android:contentDescription="@string/track_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TrackCast.MediumComponent"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- track name -->
        <TextView
            android:id="@+id/textTrackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:layout_constraintEnd_toStartOf="@id/iconFavorite"
            app:layout_constraintStart_toEndOf="@id/imageTrack"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Spa-Francorchamps" />

        <!-- location with icon -->
        <ImageView
            android:id="@+id/iconLocation"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/location"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toEndOf="@id/imageTrack"
            app:layout_constraintTop_toBottomOf="@id/textTrackName" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="@id/iconLocation"
            app:layout_constraintEnd_toStartOf="@id/iconFavorite"
            app:layout_constraintStart_toEndOf="@id/iconLocation"
            app:layout_constraintTop_toTopOf="@id/iconLocation"
            tools:text="Stavelot, Belgium" />

        <!-- weather info with glassmorphic badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#E8F4FF"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toEndOf="@id/imageTrack"
            app:layout_constraintTop_toBottomOf="@id/iconLocation">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp">

                <!-- air temperature icon -->
                <ImageView
                    android:id="@+id/iconWeather"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/weather_info"
                    android:src="@drawable/ic_thermometer"
                    tools:ignore="UseAppTint" />

                <!-- air temperature -->
                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/ios_blue"
                    android:textStyle="bold"
                    tools:text="22°c" />

                <!-- air label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Air"
                    android:textSize="10sp"
                    android:textColor="@color/ios_blue"
                    android:alpha="0.7" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- track surface temp badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSurfaceTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#FFF4E6"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="@id/cardWeather"
            app:layout_constraintStart_toEndOf="@id/cardWeather"
            app:layout_constraintTop_toTopOf="@id/cardWeather">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp">

                <!-- track surface icon -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/track_surface_temp"
                    android:src="@drawable/ic_road"
                    tools:ignore="UseAppTint" />

                <!-- track surface temperature -->
                <TextView
                    android:id="@+id/textSurfaceTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/ios_orange"
                    android:textStyle="bold"
                    tools:text="35°c" />

                <!-- track label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Track"
                    android:textSize="10sp"
                    android:textColor="@color/ios_orange"
                    android:alpha="0.7" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- favorite icon with glass effect -->
        <ImageView
            android:id="@+id/iconFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/favorite"
            android:padding="4dp"
            android:src="@android:drawable/star_off"
            android:tint="@color/favorite_gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseAppTint" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

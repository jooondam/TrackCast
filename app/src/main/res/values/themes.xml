<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ios-inspired light theme -->
    <style name="Base.Theme.TrackCast" parent="Theme.Material3.Light.NoActionBar">
        <!-- primary colors -->
        <item name="colorPrimary">@color/ios_light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/ios_light_primary</item>

        <!-- secondary colors -->
        <item name="colorSecondary">@color/ios_light_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- surface colors -->
        <item name="colorSurface">@color/ios_light_surface</item>
        <item name="colorOnSurface">@color/ios_light_text_primary</item>
        <item name="colorSurfaceVariant">@color/glass_light</item>

        <!-- background -->
        <item name="android:colorBackground">@color/ios_light_background</item>
        <item name="colorOnBackground">@color/ios_light_text_primary</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/ios_light_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TrackCast.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TrackCast.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TrackCast.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TrackCast.Body2</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TrackCast.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TrackCast.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TrackCast.LargeComponent</item>

        <!-- material components -->
        <item name="chipStyle">@style/Widget.TrackCast.Chip</item>
        <item name="materialCardViewStyle">@style/Widget.TrackCast.CardView</item>
        <item name="floatingActionButtonStyle">@style/Widget.TrackCast.FloatingActionButton</item>
    </style>

    <style name="Theme.TrackCast" parent="Base.Theme.TrackCast" />

    <!-- typography styles -->
    <style name="TextAppearance.TrackCast.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/ios_light_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackCast.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/ios_light_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackCast.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/ios_light_text_secondary</item>
    </style>

    <style name="TextAppearance.TrackCast.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/ios_light_text_tertiary</item>
    </style>

    <!-- shape appearances -->
    <style name="ShapeAppearance.TrackCast.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.TrackCast.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.TrackCast.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- widget styles -->
    <style name="Widget.TrackCast.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/glass_light</item>
        <item name="chipStrokeColor">@color/glass_border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/ios_light_text_primary</item>
    </style>

    <style name="Widget.TrackCast.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/glass_light</item>
        <item name="strokeColor">@color/glass_border_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TrackCast.MediumComponent</item>
    </style>

    <style name="Widget.TrackCast.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/ios_light_primary</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TrackCast.LargeComponent</item>
    </style>
</resources>
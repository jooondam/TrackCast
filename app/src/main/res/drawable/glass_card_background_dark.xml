<?xml version="1.0" encoding="utf-8"?>
<!-- glassmorphism card background for dark mode with frosted glass effect -->
<!-- reference: iOS glassmorphism design patterns from https://hype4.academy/articles/design/glassmorphism-in-user-interfaces -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/glass_dark" />
    <corners android:radius="16dp" />
    <stroke
        android:width="1dp"
        android:color="@color/glass_border_dark" />
</shape>

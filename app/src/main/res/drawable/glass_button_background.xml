<?xml version="1.0" encoding="utf-8"?>
<!-- circular glassmorphism button for icons (favorite, weather icons) -->
<!-- reference: iOS glassmorphism design patterns from https://hype4.academy/articles/design/glassmorphism-in-user-interfaces -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="@color/glass_light" />
    <stroke
        android:width="1dp"
        android:color="@color/glass_border_light" />
</shape>
